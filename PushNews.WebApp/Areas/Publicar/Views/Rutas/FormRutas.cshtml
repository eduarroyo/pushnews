@using Txt = PushNews.WebApp.App_LocalResources
@using PushNews.WebApp.Models.Rutas
@model RutaModel

<div class="formulario-edicion k-group">
@using (Html.BeginForm("", "", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RutaID, new { data_bind = "value: RutaID" })

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 bloque-form bloque-form-1">
                <h3>@Txt.Rutas.SeccionIdentificacion</h3>
                <div class="row">
                    <div class="form-group col-xs-12 col-sm-5">
                        <div class="control-label">
                            @Html.LabelFor(model => model.HermandadID)
                        </div>
                        @(Html.Kendo().DropDownListFor(m => m.HermandadID)
                            .Name("HermandadID")
                            .ValuePrimitive(true)
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .DataSource(ds => ds.Read("Lista", "Hermandades"))
                            .HtmlAttributes(new
                            {
                                @class = "form-control campo-form",
                                data_bind = "value: HermandadID"
                            })
                        )
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.Descripcion)
                        </div>
                        @(Html.Kendo().TextBoxFor(model => model.Descripcion)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Descripcion" })
                        )
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.GpsCabezaID)
                        </div>
                        @(Html.Kendo().DropDownListFor(m => m.GpsCabezaID)
                            .Name("GpsCabezaID")
                            .ValuePrimitive(true)
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .DataSource(ds => ds.Read("Lista", "Gpss"))
                            .HtmlAttributes(new
                            {
                                @class = "form-control campo-form",
                                data_bind = "value: GpsCabezaID"
                            })
                        )
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.GpsColaID)
                        </div>
                        @(Html.Kendo().DropDownListFor(m => m.GpsColaID)
                            .Name("GpsColaID")
                            .OptionLabel(Txt.Comun.Ninguno)
                            .ValuePrimitive(true)
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .DataSource(ds => ds.Read("Lista", "Gpss"))
                            .HtmlAttributes(new
                            {
                                @class = "form-control campo-form",
                                data_bind = "value: GpsColaID"
                            })
                        )
                    </div>
                </div>
            </div>
            <div class="col-sm-6 bloque-form bloque-form-1">
                <h3>@Txt.Rutas.SeccionRecorrido</h3>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.InicioDescripcion)
                        </div>
                        @(Html.Kendo().TextBoxFor(model => model.InicioDescripcion)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:InicioDescripcion" })
                        )
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.InicioFecha)
                        </div>
                        @(Html.Kendo().DateTimePickerFor(model => model.InicioFecha)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:InicioFecha" })
                        )
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.EntradaEnCarreraOficial)
                        </div>
                        @(Html.Kendo().TextBoxFor(model => model.EntradaEnCarreraOficial)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:EntradaEnCarreraOficial" })
                        )
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="control-label">
                            @Html.LabelFor(model => model.EntradaEnCarreraOficialLatitud)
                        </div>
                        @(Html.Kendo().NumericTextBoxFor(model => model.EntradaEnCarreraOficialLatitud)
                            .Min(-90)
                            .Max(90)
                            .Decimals(6)
                            .Format("N6")
                            .HtmlAttributes(new { @class = "campo-form", data_bind = "value:EntradaEnCarreraOficialLatitud" })
                        )
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="control-label">
                            @Html.LabelFor(model => model.EntradaEnCarreraOficialLongitud)
                        </div>
                        @(Html.Kendo().NumericTextBoxFor(model => model.EntradaEnCarreraOficialLongitud)
                            .Min(-180)
                            .Max(180)
                            .Decimals(6)
                            .Format("N6")
                            .HtmlAttributes(new { @class = "campo-form", data_bind = "value:EntradaEnCarreraOficialLongitud" })
                        )
                    </div>
                    <div class="form-group col-xs-12 center">
                        <button class="btn btn-default" id="btSeleccionarCoordenadasCO">
                            <i class="fa fa-map-marker"></i>&nbsp;@Txt.Coordenadas.Titulo
                        </button>
                    </div>
                    
                    @* FIN DE RUTA *@
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.FinDescripcion)
                        </div>
                        @(Html.Kendo().TextBoxFor(model => model.FinDescripcion)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:FinDescripcion" })
                        )
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.FinFecha)
                        </div>
                        @(Html.Kendo().DateTimePickerFor(model => model.FinFecha)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:FinFecha" })
                        )
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="botonera">
            <button class="btn btn-default btCancelar">
                <i class="fa fa-ban"></i>
                @Txt.Comun.Cancelar
            </button>
            <button class="btn btn-primary btGuardar">
                <i class="fa fa-check"></i>
                @Txt.Comun.Guardar
            </button>
        </div>
    </div>
}
</div>                