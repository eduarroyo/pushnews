@using Txt = PushNews.WebApp.App_LocalResources
@model PushNews.WebApp.Models.Asociados.AsociadoModel

<div class="formulario-edicion">
    @using (Html.BeginForm("", "", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AsociadoID, new { data_bind = "value:AsociadoID" })
        @Html.HiddenFor(model => model.Activo, new { data_bind = "value:Activo" })
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0 bloque-form bloque-form-3">
                    <h3>@Txt.Asociados.SeccionIdentificacion</h3>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Codigo)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Codigo)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Codigo" })
                            )
                        </div>
                    </div>
                    <div class="row no-edicion">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Clave)
                            </div>
                            @(Html.PasswordFor(model => model.Clave,
                                new { @class = "k-textbox form-control campo-form", data_bind = "value:Clave" })
                            )
                            @Html.ValidationMessageFor(model => model.Clave)
                        </div>
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.ConfirmarClave)
                            </div>
                            @(Html.PasswordFor(model => model.ConfirmarClave,
                                new { @class = "k-textbox form-control campo-form", data_bind = "value:ConfirmarClave" })
                            )
                            @Html.ValidationMessageFor(model => model.ConfirmarClave)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Nombre)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Nombre)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Nombre" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Apellidos)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Apellidos)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Apellidos" })
                            )
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0 bloque-form bloque-form-2">
                    <h3>@Txt.Asociados.SeccionContacto</h3>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Email)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Email)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Email" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Telefono)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Telefono)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Telefono" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Direccion)
                            </div>
                            @(Html.TextAreaFor(model => model.Direccion,
                                new { @class = "form-control campo-form", data_bind = "value:Direccion" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.CodigoPostal)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.CodigoPostal)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:CodigoPostal" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Localidad)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Localidad)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Localidad" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Provincia)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Provincia)
                                .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Provincia" })
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="botonera">
                <button class="btn btn-default btCancelar">
                    <i class="fa fa-ban"></i>
                    @Txt.Comun.Cancelar
                </button>
                <button class="btn btn-primary btGuardar">
                    <i class="fa fa-check"></i>
                    @Txt.Comun.Guardar
                </button>
            </div>
        </div>
    }
</div>