@using Txt = PushNews.WebApp.App_LocalResources
@model PushNews.WebApp.Models.Hermandades.HermandadModel

<div class="formulario-edicion">
    @using (Html.BeginForm("", "", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.HermandadID, new { data_bind = "value:HermandadID" })

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0 bloque-form bloque-form-3">
                    <h3>@Txt.Hermandades.SeccionIdentificacion</h3>

                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.LogotipoDocumentoID)
                            </div>
                            @Html.HiddenFor(model => model.LogotipoDocumentoID, new { data_bind = "value: LogotipoDocumentoID" })
                            <img data-bind="attr: {src: LogotipoUrl}, visible: LogotipoDocumentoID" style="max-width: 250px; max-height: 200px;" />
                            @(Html.Kendo().Upload()
                                .Name("LogotipoAdjunto")
                                .ShowFileList(false)
                                .Multiple(false)
                                .HtmlAttributes(new { accept = "image/*" })
                                .Async(a => a.Save("NuevoLogotipo", "Adjuntos").AutoUpload(true))
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Nombre)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Nombre)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Nombre" })
                            )
                        </div>
                    </div>       
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.Tags)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.Tags)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Tags" })
                            )
                        </div>
                    </div>
                </div>
                <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0 bloque-form bloque-form-3">
                    <h3>@Txt.Hermandades.SeccionIglesia</h3>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.IglesiaNombre)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.IglesiaNombre)
                        .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:IglesiaNombre" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="control-label">
                                @Html.LabelFor(model => model.IglesiaDireccion)
                            </div>
                            @(Html.Kendo().TextBoxFor(model => model.IglesiaDireccion)
                        .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:IglesiaDireccion" })
                            )
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <div class="control-label">
                                @Html.LabelFor(model => model.IglesiaLatitud)
                            </div>
                            @(Html.Kendo().NumericTextBoxFor(model => model.IglesiaLatitud)
                                .Min(-90)
                                .Max(90)
                                .Decimals(6)
                                .Format("N6")
                                .HtmlAttributes(new { @class = "campo-form", data_bind = "value:IglesiaLatitud" })
                            )
                        </div>
                        <div class="form-group col-sm-6">
                            <div class="control-label">
                                @Html.LabelFor(model => model.IglesiaLongitud)
                            </div>
                            @(Html.Kendo().NumericTextBoxFor(model => model.IglesiaLongitud)
                                .Min(-180)
                                .Max(180)
                                .Decimals(6)
                                .Format("N6")
                                .HtmlAttributes(new { @class = "campo-form", data_bind = "value:IglesiaLongitud" })
                            )
                        </div>
                    </div>
                    <div class="form-group col-xs-12 center">
                        <button class="btn btn-default" id="btSeleccionarCoordenadasIglesia">
                            <i class="fa fa-map-marker"></i>&nbsp;@Txt.Coordenadas.Titulo
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="botonera">
                        <button class="btn btn-default btCancelar">
                            <i class="fa fa-ban"></i>
                            @Txt.Comun.Cancelar
                        </button>
                        <button class="btn btn-primary btGuardar">
                            <i class="fa fa-check"></i>
                            @Txt.Comun.Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>   
    }
</div>