@using Txt = PushNews.WebApp.App_LocalResources

<div class="modal fade" id="DialogoCambiarClave">
    <!-- Modal: cambiar clave -->
    <div class=" modal-dialog">
        <div class=" modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Txt.Usuarios.CambiarClave</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="col-md-offset-2 col-md-8">
                        @{ var chPasswordModel = new PushNews.WebApp.Models.Account.CambiarClaveUsuarioModel(); }
                        @using (Html.BeginForm("CambiarClave", "Usuarios", FormMethod.Post, new { id = "frmCambiarClave" }))
                        {
                            @Html.AntiForgeryToken();
                            @Html.HiddenFor(model => chPasswordModel.UsuarioID)
                            <div class="form-group">
                                @Html.LabelFor(model => chPasswordModel.Clave)
                                <div data-container-for="Clave">
                                    @Html.PasswordFor(model => chPasswordModel.Clave, new { @class = "k-textbox" })
                                    @Html.ValidationMessageFor(model => chPasswordModel.Clave, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => chPasswordModel.ConfirmarClave)
                                <div data-container-for="ConfirmarClave">
                                    @Html.PasswordFor(model => chPasswordModel.ConfirmarClave, new { @class = "k-textbox" })
                                    @Html.ValidationMessageFor(model => chPasswordModel.ConfirmarClave, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Txt.Comun.Cancelar</button>
                <button type="button" class="btn btn-primary btCambiarClaveGuardar">@Txt.Comun.Guardar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->