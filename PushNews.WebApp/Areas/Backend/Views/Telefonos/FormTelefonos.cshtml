@using Txt = PushNews.WebApp.App_LocalResources
@using PushNews.WebApp.Models.Telefonos
@model TelefonoModel

<div class="formulario-edicion">
@using (Html.BeginForm("", "", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Activo, new { data_bind = "value: Activo" })
    @Html.HiddenFor(m => m.TelefonoID, new { data_bind = "value: TelefonoID" })

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 col- bloque-form bloque-form-1">
                
                <div class="row">
                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.Descripcion)
                        </div>
                        @(Html.Kendo().TextBoxFor(model => model.Descripcion)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Descripcion" })
                        )
                    </div>

                    <div class="form-group col-xs-12">
                        <div class="control-label">
                            @Html.LabelFor(model => model.Numero)
                        </div>
                        @(Html.Kendo().TextBoxFor(model => model.Numero)
                            .HtmlAttributes(new { @class = "form-control campo-form", data_bind = "value:Numero" })
                        )
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="botonera">
            <button class="btn btn-default btCancelar">
                <i class="fa fa-ban"></i>
                @Txt.Comun.Cancelar
            </button>
            <button class="btn btn-primary btGuardar">
                <i class="fa fa-check"></i>
                @Txt.Comun.Guardar
            </button>
        </div>
    </div>
}
</div>                